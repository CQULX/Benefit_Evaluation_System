    </update>

    <delete id="deleteValueVarcharById" parameterType="String">
        delete from value_varchar where id = #{id}
    </delete>

    <delete id="deleteValueVarcharByIds" parameterType="String">
        delete from value_varchar where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>