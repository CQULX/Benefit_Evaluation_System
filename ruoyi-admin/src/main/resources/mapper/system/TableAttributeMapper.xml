<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.web.mapper.TableAttributeMapper">
    
    <resultMap type="TableAttribute" id="TableAttributeResult">
        <result property="id"    column="id"    />
        <result property="attributeId"    column="attribute_id"    />
        <result property="tableId"    column="table_id"    />
        <result property="entityRelated"    column="entity_related"    />
    </resultMap>

    <sql id="selectTableAttributeVo">
        select id, attribute_id, table_id, entity_related, equation from table_attribute
    </sql>

    <select id="selectTableAttributeList" parameterType="TableAttribute" resultMap="TableAttributeResult">
        <include refid="selectTableAttributeVo"/>
        <where>  
            <if test="attributeId != null  and attributeId != ''"> and attribute_id = #{attributeId}</if>
            <if test="tableId != null  and tableId != ''"> and table_id = #{tableId}</if>
            <if test="entityRelated != null "> and entity_related = #{entityRelated}</if>
        </where>
    </select>
    
    <select id="selectTableAttributeById" parameterType="String" resultMap="TableAttributeResult">
        <include refid="selectTableAttributeVo"/>
        where id = #{id}
    </select>

    <insert id="insertTableAttribute" parameterType="TableAttribute" useGeneratedKeys="true" keyProperty="id">
        insert into table_attribute
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="attributeId != null and attributeId != ''">attribute_id,</if>
            <if test="tableId != null and tableId != ''">table_id,</if>
            <if test="entityRelated != null">entity_related,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="attributeId != null and attributeId != ''">#{attributeId},</if>
            <if test="tableId != null and tableId != ''">#{tableId},</if>
            <if test="entityRelated != null">#{entityRelated},</if>
         </trim>
    </insert>

    <update id="updateTableAttribute" parameterType="TableAttribute">
        update table_attribute
        <trim prefix="SET" suffixOverrides=",">
            <if test="attributeId != null and attributeId != ''">attribute_id = #{attributeId},</if>
            <if test="tableId != null and tableId != ''">table_id = #{tableId},</if>
            <if test="entityRelated != null">entity_related = #{entityRelated},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTableAttributeById" parameterType="String">
        delete from table_attribute where id = #{id}
    </delete>

    <delete id="deleteTableAttributeByIds" parameterType="String">
        delete from table_attribute where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>